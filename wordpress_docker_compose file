wordpress:
    image: wordpress
    links:
     - mariadb:mysql
    environment:
     - WORDPRESS_DB_PASSWORD=<password>
    ports:
     - "<server public IP>:80:80"
    volumes:
     - ./code:/code
     - ./html:/var/www/html
mariadb:
    image: mariadb
    environment:
     - MYSQL_ROOT_PASSWORD=<password>
     - MYSQL_DATABASE=wordpress
    volumes:
     - ./database:/var/lib/mysql
